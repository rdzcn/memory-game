{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build", "^db:generate"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^db:generate"]
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate:dev": {
			"cache": false,
			"dependsOn": ["^db:generate"]
		},
		"db:migrate:deploy": {
			"cache": false,
			"dependsOn": ["^db:generate"]
		},
		"db:seed": {
			"cache": false,
			"dependsOn": ["^db:generate", "^db:migrate:deploy"]
		}
	}
}
