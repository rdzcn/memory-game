{
  "compilerOptions": {
    "outDir": "build",
    "resolveJsonModule": true,
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@common/*": ["../../packages/common/*"],
			"@app/*": ["./app/*"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    
  }
}