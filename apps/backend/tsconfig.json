{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./app",
    "resolveJsonModule": true,
    "target": "es2021",
    "lib": ["es2021"],
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@common/*": ["../../packages/common/src/*"],
			"@app/*": ["./app/*"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/common" }
  ]
}